{
  "name": "nx-release-test",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "test": "turbo run test",
    "release": "nx release publish",
    "release:version": "nx release version",
    "release:dry-run": "nx release --dry-run",
    "release:plan": "nx release plan",
    "release:plan:check": "nx release plan:check --base=origin/main --head=HEAD"
  },
  "devDependencies": {
    "@nx/js": "20.8.3",
    "nx": "^20.4.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "turbo": "^2.7.4",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@4.12.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
